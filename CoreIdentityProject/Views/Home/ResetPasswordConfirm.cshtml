@model CoreIdentityProject.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}



<h4>Yeni Şifre Oluştur</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        @if(@ViewBag.Status=="success")
        {
            <div class="alert alert-success">İşleminiz başarılı bir şekilde gerçekleştirilmiştir. Yeni şifreniz ile giriş yapabilirisiz.</div>
            <a class="btn btn-link" asp-action="Login" asp-controller="Home">Giriş için tıklayınız.</a>
        }
        else
        {
            
        <form asp-action="ResetPasswordConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="PasswordNew" class="control-label"></label>
                <input asp-for="PasswordNew" class="form-control" />
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Oluştur" class="btn btn-primary mt-2" />
            </div>
        </form>
        }






    </div>
</div>


