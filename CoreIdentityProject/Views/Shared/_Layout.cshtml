<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />



</head>
<body>

	<nav class="navbar navbar-expand-lg bg-light">
		<div class="container">
			<a class="navbar-brand" asp-action="Index">Hashtag.com</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">


				<ul class="nav">
					<li class="nav-item">
						<a class="nav-link" asp-action="Index" asp-controller="Home" aria-current="page">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link nav-item" asp-action="SignUp" asp-controller="Home" aria-current="page">Üye Ol</a>
					</li>
					<li class="nav-item">
						<a class="nav-link nav-item" asp-action="LogIn" asp-controller="Home" aria-current="page">Giriş Yap</a>
					</li>
					
				</ul>

				
				
				

			</div>
		</div>

	</nav>



	<div class="container mt-3">
		@RenderBody()
	</div>
	<script src="~/lib/jquery/jquery.js"></script>
	<script src="~/lib/jquery-validate/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
