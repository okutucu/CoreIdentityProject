@model UserViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
   <div class="col-md-3">
       @if(@Model.Picture ==null)
       {
            <img src="~/images/download.png" />
       }
       else
       {
            <img src="@Model.Picture"/>
           
       }

        

        
    </div>
   <div class="col-md-9">

       <table class="table table-bordered table-striped">
          <tr>
              <th>Kullanıcı İsmi</th>
              <td>@Model.UserName</td>

          </tr>
           <tr>
              <th>E-posta</th>
              <td>@Model.Email</td>

          </tr>
           <tr>
              <th>Telefon No</th>
              <td>@Model.PhoneNumber</td>

          </tr>
            <tr>
              <th>Şehir</th>

              <td>
                  @if(!String.IsNullOrEmpty(@Model.City))
                    {
                        @Model.City
                    }
                    else
                    {
                       <span>Belirtilmemiş</span>
                    }

              </td>

          </tr>

            <tr>
              <th>Doğum Tarihi</th>
              <td>
                  
                  @if(Model.BirthDay != null)
                  {
                        @Model.BirthDay?.ToShortDateString()
                  }
                  else
                  {
                        <span>Belirtilmemiş</span> 
                  }

                  
                  
                  </td>

          </tr>
            <tr>
              <th>Cinsiyet</th>
              <td>@Model.Gender</td>
          </tr>




       </table>

   </div>


</div>

